<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ToDoApp" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="android:windowBackground">@color/black_16</item>
        <item name="android:navigationBarColor">@color/black_16</item>
        <item name="background">@color/black_16</item>
        <item name="colorSecondary">@color/black_16</item>
        <item name="colorPrimaryDark">@color/black_16</item>
        <item name="floatingActionButtonStyle">@style/FloatingActionButtonStyle</item>
    </style>
    
    <style name="FloatingActionButtonStyle" parent="Widget.Design.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/FabCircle</item>
    </style>
    
    <style name="FabCircle" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">50%</item>
        <item name="cornerFamily">rounded</item>
        <item name="backgroundTint">@color/blue</item>
    </style>


