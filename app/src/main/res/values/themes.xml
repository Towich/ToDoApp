<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ToDoApp" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/white_F7</item>
        <item name="colorSecondary">@color/black_25</item>
        <item name="colorAccent">@color/white</item>

        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="background">@color/white_F7</item>
        <item name="android:navigationBarColor">@color/white_F7</item>
        <item name="android:windowBackground">@color/white_F7</item>

        <item name="floatingActionButtonStyle">@style/FloatingActionButtonStyle</item>
    </style>

    <style name="FloatingActionButtonStyle" parent="Widget.Design.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/FabCircle</item>
    </style>

    <style name="FabCircle" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">50%</item>
        <item name="cornerFamily">rounded</item>
        <item name="backgroundTint">@color/blue</item>
    </style>

    <style name="Theme.ToDoApp" parent="Base.Theme.ToDoApp" />
</resources>